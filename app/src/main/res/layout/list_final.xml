<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/list_final_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/list_final_tvStep"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        <TextView
            android:id="@+id/list_final_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:maxLines="2"
            android:minLines="2"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_final_ivIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_layout"
        app:tint="@android:color/white" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_final_ivIcon"
        android:padding="20dp"
        android:id="@+id/list_final_imageview"/>

    <TextView
        android:id="@+id/list_final_tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_final_ivIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_layout" />
    <ImageView
        android:id="@+id/list_final_ivAction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@android:color/white" />



</androidx.constraintlayout.widget.ConstraintLayout>