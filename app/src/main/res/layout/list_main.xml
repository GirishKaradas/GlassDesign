<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_main_imageview"
        android:layout_width="@dimen/menu_text_size"
        android:layout_height="@dimen/menu_text_size"
        app:layout_constraintBottom_toBottomOf="@id/list_main_textview"
        app:layout_constraintRight_toLeftOf="@id/list_main_textview"
        app:layout_constraintTop_toTopOf="@id/list_main_textview"
        android:scaleType="fitXY"
        android:src="@drawable/ic_help"
        android:layout_marginRight="10dp"
        app:tint="@color/design_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/design_green"
        style="@style/MenuTextViewStyle"
        android:text="Defrost Manual"
        android:id="@+id/list_main_textview"/>

</androidx.constraintlayout.widget.ConstraintLayout>